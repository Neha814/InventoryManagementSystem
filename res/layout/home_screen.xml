<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/blue"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/shop_icon" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:src="@drawable/app_name_two" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical" >

        <!-- ********** logout ********************** -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="4dp"
            android:background="#E8E8E8"
            android:orientation="horizontal"
            android:weightSum="10" >
            
              <Button
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1.5"
                android:background="@color/Light_blue"
                android:text="Status"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center"
                android:text="Please select your choice"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <Button
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1.5"
                android:background="@color/black"
                android:drawableTop="@drawable/logout_icon"
                android:paddingTop="8dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/inventory_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/take_icon_hover"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/take_inventory"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/verify_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/verification"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
               android:background="@drawable/text_box"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/verfi_label"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/location_settings"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/setting_hover"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
           android:background="@color/blue"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
             android:textColor="@color/white"
            android:text="Location Settings"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

</LinearLayout>